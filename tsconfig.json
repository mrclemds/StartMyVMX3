{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["./src/**.ts"],
  "exclude": ["./dependencies", "./node_modules", "./build", "config.yml", "*.json", "/test"]
}
